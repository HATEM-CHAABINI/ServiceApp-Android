<?xml version="1.0" encoding="utf-8"?>




<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.serviceapp.com.app.serviceapp.DetailserviceActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac">


        <TextView
            android:id="@+id/emailserv"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/telserv"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="TextView"
            android:textColor="#FAFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prixserv"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="388dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/metierserv"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nomserv"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageSer"
            android:layout_width="168dp"
            android:layout_height="136dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="36dp"
            android:src="@drawable/hatemlogo"
            app:layout_constraintBottom_toTopOf="@+id/nomserv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:isIndicator="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/metierserv" />

        <Button
            android:id="@+id/btnajoutserv"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:background="#760004"
            android:text="Ajouter service"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Chatbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_send"
            app:layout_constraintBottom_toBottomOf="@+id/btnajoutserv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lesComm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnajoutserv" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>