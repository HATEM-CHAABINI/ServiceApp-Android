<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.android.serviceapp.com.app.serviceapp.OffreetServiceValideretRefuserAdapterActivity"
android:id="@+id/root_viewoffetservicevetr"

app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    >

    <View
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:background="@color/darkgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageser"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/hatemlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hatemlogo" />

    <TextView
        android:id="@+id/txt_nameser"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="117dp"
        android:layout_height="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Dateser"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="189dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="email@gmail.com"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imageser"
        app:layout_constraintTop_toBottomOf="@+id/txt_nameser" />

    <ImageView
        android:id="@+id/imgrefouval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Dateser"
        app:layout_constraintTop_toTopOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>